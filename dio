-- Atividade DIO

SELECT * FROM Filmes
--- Atividade 1

SELECT Nome, Ano
FROM Filmes

--- Atividade 2

SELECT Nome, Ano
FROM Filmes
ORDER BY Ano ASC

--- Atividade 3

SELECT Nome, Ano, Duracao
FROM Filmes
WHERE Nome Like 'De volta%'

--- Atividade 4

SELECT Nome, Ano, Duracao
FROM Filmes
WHERE Ano = 1997

--- Atividade 5

SELECT Nome, Ano, Duracao
FROM Filmes
WHERE Ano > 2000


--- Atividade 6

SELECT Nome, Ano, Duracao
FROM Filmes
WHERE Duracao > 100 AND Duracao < 150
ORDER BY Duracao ASC

--- Atividade 7

SELECT Ano,
	COUNT(*) Quantidade
FROM Filmes
GROUP BY Ano
ORDER BY MAX (Duracao) DESC

--- Atividade 8

SELECT * FROM Atores

SELECT PrimeiroNome, UltimoNome, Genero 
FROM Atores
WHERE Genero = 'M'


--- Atividade 9

SELECT PrimeiroNome, UltimoNome, Genero 
FROM Atores
WHERE Genero = 'F'
ORDER BY PrimeiroNome ASC

--- Atividade 10

SELECT
    f.Nome AS Nome_Filme,
    e.Genero as Nome_Genero
FROM Filmes f
INNER JOIN FilmesGenero g ON f.Id = g.IdFilme
INNER JOIN Generos e ON e.Id = g.IdGenero

--- Atividade 11

SELECT
    f.Nome AS Nome_Filme,
    e.Genero as Nome_Genero
FROM Filmes f
INNER JOIN FilmesGenero g ON f.Id = g.IdFilme
INNER JOIN Generos e ON e.Id = g.IdGenero
WHERE e.Genero = 'MistÃ©rio'


--- Atividade 12

SELECT

	f.Nome,
	a.PrimeiroNome,
	a.UltimoNome,
	e.Papel

FROM Filmes f
INNER JOIN ElencoFilme e ON f.Id = e.IdFilme
INNER JOIN Atores a ON a.Id = e.IdAtor







